@model List<DotnetPhonebook.Models.Domain.Phone>

@{
    ViewData["Title"] = "Phonebook";
}

<div class="row">
    <div class="d-flex justify-content-between">
        <div>
            <h4 class="text-uppercase fw-bold">Number List</h4>
        </div>
        <div>
            <!-- Button trigger modal -->
            <div id="placeHolderHere"></div>
            <button 
                type="button" 
                class="btn btn-success" 
                data-bs-toggle="ajax-modal" 
                data-bs-target="#addPhoneNumber"
                data-url="@Url.Action("Create")"
            >
                <span>
                    <i class="fa-solid fa-plus"></i>
                    Create
                </span>
            </button>
            @* <a asp-action="Create" asp-controller="Phones" class="btn btn-success">
                <span>
                    <i class="fa-solid fa-plus"></i>
                    Create
                </span>
            </a> *@
        </div>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-12">
        <table class="table table-dark table-bordered table-responsive">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(((Int32) 1) + @Model.IndexOf(item))</th>
                        <td>@item.OwnerName</td>
                        <td>@item.Email</td>
                        <td>@item.Number</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Phones" asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Phones" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>