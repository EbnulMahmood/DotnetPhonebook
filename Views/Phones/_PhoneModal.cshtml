@model DotnetPhonebook.Models.Domain.Phone

<div class="modal fade" id="addPhoneNumber" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addPhoneNumberLabel">Add Phone</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Full Name:</label>
                        <input asp-for="OwnerName" type="text" class="form-control required" placeholder="Enter name" tabindex="1">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input asp-for="Email" type="text" class="form-control required" placeholder="Enter email" tabindex="2">
                    </div>
                    <div class="form-group">
                        <label>Mobile:</label>
                        <input asp-for="Number" type="text" class="form-control required" placeholder="Enter mobile" tabindex="3">
                    </div>
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-bs-save="modal">Add</button>
      </div>
    </div>
  </div>
</div>