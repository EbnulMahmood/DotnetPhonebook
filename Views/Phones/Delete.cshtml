@model DotnetPhonebook.Models.Domain.Phone

@{
    ViewData["Title"] = "Delete Contact";
}

<form asp-action="Delete" asp-area="Phones" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Full Name:</label>
                <input asp-for="OwnerName" type="text" class="form-control required" placeholder="Enter name" tabindex="1">
            </div>
             <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter email" tabindex="2">
            </div>
             <div class="form-group">
                <label>Mobile:</label>
                <input asp-for="Number" type="text" class="form-control required" placeholder="Enter mobile" tabindex="3">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" asp-controller="Phones" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>